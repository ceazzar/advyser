â”‚     loc.suburb, loc.state, loc.postcode                                                 â”‚
â”‚   FROM listing l                                                                         â”‚
â”‚   JOIN business b ON l.business_id = b.id                                               â”‚
â”‚   JOIN advisor_profile ap ON l.advisor_profile_id = ap.id                               â”‚
â”‚   LEFT JOIN location loc ON b.primary_location_id = loc.id                              â”‚
â”‚   WHERE l.is_active = true                                                              â”‚
â”‚     AND l.deleted_at IS NULL                                                            â”‚
â”‚   -- Dynamic filters applied here                                                        â”‚
