â”‚                                                                                          â”‚
â”‚   // Single query with nested selects - avoids N+1 queries                              â”‚
â”‚   const { data: listings, error } = await supabase                                      â”‚
â”‚     .from("listing")                                                                     â”‚
â”‚     .select(`                                                                            â”‚
â”‚       id, headline, bio, advisor_type, rating_avg, review_count,                        â”‚
â”‚       verification_level, accepting_status, free_consultation, response_time_hours,    â”‚
â”‚       advisor_profile!inner(display_name, avatar_url, years_experience),                â”‚
â”‚       business!inner(trading_name, primary_location_id, location:primary_location_id(  â”‚
â”‚         suburb, state, postcode                                                          â”‚
â”‚       )),                                                                                â”‚
â”‚       listing_specialty(specialty:specialty_id(name, slug)),                            â”‚
â”‚       credential:credential(credential_type, credential_number, verification_status)   â”‚
â”‚     `)                                                                                   â”‚
â”‚     .eq("is_active", true)                                                              â”‚
â”‚     .is("deleted_at", null)                                                             â”‚
â”‚     .order("search_boost", { ascending: false })                                        â”‚
â”‚     .order("rating_avg", { ascending: false, nullsFirst: false });                      â”‚
