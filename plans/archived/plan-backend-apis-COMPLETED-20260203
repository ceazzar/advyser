â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜


ğŸ”„ Client-Side Mutations
â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

For mutations (POST, PATCH, DELETE), use Server Actions:

â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
â”‚ // site/src/lib/actions/leads.ts                                                         â”‚
â”‚ "use server";                                                                            â”‚
â”‚                                                                                          â”‚
â”‚ import { createClient } from "@/lib/supabase/server";                                   â”‚
â”‚ import { revalidatePath } from "next/cache";                                            â”‚
â”‚ import { updateLeadStatusSchema } from "@/lib/schemas/lead";                            â”‚
â”‚                                                                                          â”‚
â”‚ export async function updateLeadStatus(leadId: string, status: LeadStatus) {            â”‚
â”‚   const supabase = await createClient();                                                â”‚
â”‚                                                                                          â”‚
â”‚   // 1. Validate input                                                                   â”‚
â”‚   const validated = updateLeadStatusSchema.parse({ status });                           â”‚
â”‚                                                                                          â”‚
â”‚   // 2. Authenticate user                                                                â”‚
â”‚   const { data: { user } } = await supabase.auth.getUser();                             â”‚
â”‚   if (!user) throw new Error("Unauthorized");                                           â”‚
â”‚                                                                                          â”‚
â”‚   // 3. Verify user has access to this lead's business (CRITICAL - prevent IDOR)        â”‚
â”‚   const { data: lead, error: fetchError } = await supabase                              â”‚
â”‚     .from("lead")                                                                        â”‚
â”‚     .select("business_id")                                                              â”‚
â”‚     .eq("id", leadId)                                                                   â”‚
â”‚     .single();                                                                           â”‚
â”‚                                                                                          â”‚
â”‚   if (fetchError || !lead) throw new Error("Lead not found");                           â”‚
â”‚                                                                                          â”‚
â”‚   const { data: role } = await supabase                                                 â”‚
â”‚     .from("advisor_business_role")                                                      â”‚
â”‚     .select("id")                                                                        â”‚
â”‚     .eq("user_id", user.id)                                                             â”‚
â”‚     .eq("business_id", lead.business_id)                                                â”‚
â”‚     .eq("status", "active")                                                             â”‚
â”‚     .single();                                                                           â”‚
â”‚                                                                                          â”‚
â”‚   if (!role) throw new Error("Forbidden");                                              â”‚
â”‚                                                                                          â”‚
â”‚   // 4. Update the lead                                                                  â”‚
â”‚   const { error } = await supabase                                                      â”‚
â”‚     .from("lead")                                                                        â”‚
â”‚     .update({ status: validated.status })                                               â”‚
â”‚     .eq("id", leadId);                                                                  â”‚
â”‚                                                                                          â”‚
â”‚   if (error) throw error;                                                               â”‚
â”‚                                                                                          â”‚
â”‚   // 5. If accepting lead, create conversation                                           â”‚
â”‚   if (validated.status === "contacted") {                                               â”‚
â”‚     await supabase.from("conversation").upsert({                                        â”‚
â”‚       lead_id: leadId,                                                                   â”‚
â”‚       consumer_user_id: lead.consumer_user_id,                                          â”‚
â”‚       business_id: lead.business_id,                                                    â”‚
â”‚     }, { onConflict: "consumer_user_id,business_id" });                                 â”‚
â”‚   }                                                                                      â”‚
â”‚                                                                                          â”‚
â”‚   revalidatePath("/advisor/leads");                                                     â”‚
â”‚   return { success: true };                                                              â”‚
â”‚ }                                                                                        â”‚
â”‚                                                                                          â”‚
